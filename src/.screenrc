# Two line status
hardstatus alwayslastline
hardstatus string '%{= kG}[%{G}%H%? %1`%?%{g}][%= %{= kw}%-w%{+b yk} %n*%t%?(%u)%? %{-}%+w %=%{g}][%{B}%m/%d %{W}%C%A%{g}]'

# huge scrollback buffer
defscrollback 5000

# no welcome message
startup_message off

# 256 colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# mouse tracking allows to switch region focus by clicking
mousetrack on

# default windows
screen -t Shell01 1 bash
screen -t Shell02 2 bash
screen -t Shell03 3 bash
screen -t Shell04 4 bash
screen -t Shell05 5 bash
screen -t Shell06 6 bash
screen -t Shell07 7 bash
screen -t Shell08 8 bash
screen -t Shell09 9 bash
screen -t Shell10 10 bash
screen -t Shell11 11 bash
screen -t Shell12 12 bash
select 1
bind c screen 1 # window numbering starts at 1 not 0
bind 0 select 10
# bind ! select 11
# bind @ select 12
# bind \# select 13
# bind $ select 14
 
# get rid of silly xoff stuff
bind s split

# layouts
layout autosave on
layout new 4x3
    # Create first column
    select 1
    split
    split
    split -v
    split -v
    split -v
    focus down
    select 5
    split -v
    split -v
    split -v
    focus down
    select 9
    split -v
    split -v
    split -v

    # Return to 2nd column, top frame
    focus up
    focus up
    focus right

    # Create second column
    select 2
    focus down
    select 6
    focus down
    select 10

    # Go to 3rd column, top frame
    focus up
    focus up
    focus right

    # Create third column
    select 3
    focus down
    select 7
    focus down
    select 11

    # Go to 4th column, top frame
    focus up
    focus up
    focus right

    # Create forth column
    select 4
    focus down
    select 8
    focus down
    select 12

    # Go back to home
    focus up
    focus up
    focus left
    focus left
    focus left
layout save 4x3

layout new 3x3
    # Create first column
    split
    split
    split -v
    split -v
    select 1
    focus down
    split -v
    split -v
    select 4
    focus down
    split -v
    split -v
    select 7

    # Return to 2nd column, top frame
    focus up
    focus up
    focus right

    # Create second column
    select 2
    focus down
    select 5
    focus down
    select 8

    # Go to 3rd column, top frame
    focus up
    focus up
    focus right

    # Create third column
    select 3
    focus down
    select 6
    focus down
    select 9

    # Go back to home
    focus up
    focus up
    focus left
    focus left

layout attach 3x3
layout select 3x3

# switch windows with F3 (prev) and F4 (next)
# bindkey "^[OR" prev
# bindkey "^[OS" next
 
# # switch layouts with Ctrl+F3 (prev layout) and Ctrl+F4 (next)
# bindkey "^[O1;5R" layout prev
# bindkey "^[O1;5S" layout next
 
# F2 puts Screen into resize mode. Resize regions using hjkl keys.
bindkey "^[OQ" eval "command -c rsz" # enter resize mode
 
# use hjkl keys to resize regions
bind -c rsz h eval "resize -h -5" "command -c rsz"
bind -c rsz j eval "resize -v -5" "command -c rsz"
bind -c rsz k eval "resize -v +5" "command -c rsz"
bind -c rsz l eval "resize -h +5" "command -c rsz"
 
# quickly switch between regions using tab and arrows
bind -c rsz \t    eval "focus"       "command -c rsz" # Tab
bind -c rsz -k kl eval "focus left"  "command -c rsz" # Left
bind -c rsz -k kr eval "focus right" "command -c rsz" # Right
bind -c rsz -k ku eval "focus up"    "command -c rsz" # Up
bind -c rsz -k kd eval "focus down"  "command -c rsz" # Down

